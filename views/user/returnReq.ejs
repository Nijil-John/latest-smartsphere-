        <!-- Page content -->

        <div class="mainBody" style="width: 75%">
            

            <div class="order-list" style="display: flex; flex-direction: column; align-items: center; margin: 20px;">
                <div class="order-card" style="background-color: #fff; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); width: 90%; max-width: 800px; padding: 20px;">
                    <form action="/returnRequest" method="post">
                    <!-- Products Section -->
                    <div class="product-section" style="display: flex; flex-wrap: wrap; gap: 20px;">
                        <% products.forEach((product,index) => { %>
                            <input type="checkbox" name="products[<%= index %>][productId]" value="<%= product._id %>">
                            <div class="product-card" style="display: flex; background-color: #f8f8f8; padding: 20px; border-radius: 8px; width: 100%; max-width: 100%; box-sizing: border-box;">
                                <img src="/<%= product.productImage[0].path %>" alt="<%= product.name %> Image" width="100" height="140" style="border-radius: 5px; margin-right: 20px;">
                                <div class="product-details" style="flex: 1;">
                                    <h3 style="margin: 0; font-size: 1.3em; color: #1c1c1c;"><%= product.name %></h3>
                                    <br>
                                    <p style="color: #333; font-weight: bold; font-size: 1.2em;">Price: â‚¹<%= product.price %></p>
                                    <p style="color: #555; font-size: 1.1em;">Quantity: <%= product.quantity  %></p>
                                </div>
                            </div>
                        <% }) %>
                    </div>
            
                    <!-- Order Summary and Status -->
                   

                        




                    <div class="order-info" style="margin-top: 20px; border-top: 1px solid #ddd; padding-top: 15px;">
                        <h3 style="color: #444; margin-bottom: 10px;">Order Summary</h3>
                        <p style="font-size: 1.2em; color: #4d9f4d;"><strong>Status:</strong> <%= order.status %></p>
                        <p style="font-size: 1em; color: #4d9f4d;"><strong>Total price:</strong> â‚¹<%= order.totalAmount %></p>
                        <% if(coupon){ %>
                        <p style="font-size: 1em; color: #ea6227;"><strong>Coupon Appiled Code:</strong> <%= coupon.code %></p>
                        <p style="font-size: 1em; color: #ea6227;"><strong>Coupon discount:</strong> â‚¹<%= coupon.maxDiscountAmount %></p>
                        <input type="hidden" name="couponId" value="<%= coupon.id %>">

                        <%}%>

                    </div>
                    <br>
                    <label for="return-reason">return-reason</label>
                    <select id="return-reason" name="returnReason" required>
                        <option value="" disabled selected>Select a reason</option>
                        <option value="damaged-product">Received a damaged product</option>
                        <option value="wrong-product">Received the wrong product</option>
                        <option value="description-not-match">Product didn't match the description</option>
                        <option value="change-Of-Mind">Changed my mind</option>
                        <option value="other">Other</option>
                    </select> <br><br>

                        <label for="reason">comments :</label>

                        <input type="text" name="comment" id="returnReason" placeholder="enter the return reason" required>
							<input type="hidden" name="orderId" value="<%= order._id %>">
							<input type="hidden" name="status" value="Return-Requested">
                            

                   
            
                    <!-- Cancel Order Button -->
                    <div class="action-button" style="text-align: right; margin-top: 20px;">
                        <button type="submit"  style="background-color: #767465; color: white;width: 49%; padding: 12px 24px; border: none; border-radius: 5px; cursor: pointer; font-size: 1em;margin-top: 5px;">
                            Confirm Order return
                        </button>
                        <button style="background-color: #35647e;width: 49%; color: white; padding: 12px 24px; border: none; border-radius: 5px; cursor: pointer; font-size: 1em;">
                            <a href="/orders" style="color: white; text-decoration: none;">Back to Order</a>
                        </button>
               
                    </div>
                </form>
                </div>
            </div>
            

            
        </div>
    </div>
