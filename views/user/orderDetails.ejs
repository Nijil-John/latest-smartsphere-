                        <p style="font-size: 1em; color: #4d9f4d;">Total price : â‚¹ <%= order.totalAmount %>
                        </p>
                        <%if(order.offerDiscount>0){%>
                            <p style="font-size: 1em; color: #4d9f4d;">Offer discount price : â‚¹ <%= order.offerDiscount
                                    %>
                            </p>
                            <%}%>

                                <p style="font-size: 1em; color: #4d9f4d;">Payment methode : <%= order.paymentMethod %>
                                </p>
                                <p style="font-size: 1em; color: #4d9f4d;">Payment status : <%= order.paymentStatus %>
                                </p>
                                <% if(order.paymentMethod==='ONLINE' && order.paymentStatus==='failed' ) { %>
                                    <p style="opacity: .4;">Your payment has failed. Please complete the payment to
                                        initiate the order process.</p>

                                    <!-- Hidden Form for Payment Verification -->
                                    <form id="paymentForm" class="pay-form" onsubmit="return handlePayment(event)">
                                        <input type="hidden" name="user_id" id="payment_id" value="<%= order.userId %>">
                                        <input type="hidden" name="order_id" id="order_id" value="<%= order._id %>">
                                        <!-- Retry Payment Button -->
                                        <button class="primary-btn" type="submit">Retry Payment</button>
                                    </form>

                                    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>

                                    <script>
                                        function handlePayment(e) {
                                            e.preventDefault(); // Prevent form from submitting

                                            const formData = $('.pay-form').serialize();
                                            console.log("Form Data:", formData);

                                            $.ajax({
                                                url: "/verifyRetryPayment",
                                                type: "POST",
                                                data: formData,
                                                success: function (res) {
                                                    if (res.success) {
                                                        const options = {
                                                            key: res.key_id,
                                                            amount: res.amount,
                                                            currency: "INR",
                                                            name: res.name,
                                                            description: "Order Payment",
                                                            order_id: res.order_id,
                                                            prefill: {
                                                                name: res.name,
                                                                email: res.email,
                                                                contact: res.contact,
                                                            },
                                                            theme: { color: "#6822CC" },
                                                            handler: function (response) {
                                                                console.log(response);
                                                                const order_id = document.getElementById('order_id').value; // Get the order_id from the form

                                                                // Verify the payment after success
                                                                $.ajax({
                                                                    url: "/verifyRePayment",
                                                                    type: "POST",
                                                                    data: {
                                                                        payment_id: response.razorpay_payment_id,
                                                                        signature: response.razorpay_signature,
                                                                        orderPayId: response.razorpay_order_id,
                                                                        order_id: order_id // Send order_id here
                                                                    },
                                                                    success: function (result) {
                                                                        if (result.success) {
                                                                            alert("Payment Succeeded!");
                                                                            window.location.href = "/success";
                                                                        } else {
                                                                            alert(result.msg || "Payment verification failed.");
                                                                        }
                                                                    },
                                                                    error: function () {
                                                                        alert("An error occurred while verifying payment.");
                                                                        window.location.href = "/orders";
                                                                    }
                                                                });
                                                            },
                                                            modal: {
                                                                ondismiss: function () {
                                                                    alert("Payment was not completed. Please try again later.");
                                                                }
                                                            },
                                                        };
                                                        const razorpayObject = new Razorpay(options);
                                                        razorpayObject.open();
                                                    } else {
                                                        alert(res.msg || "Payment initialization failed.");
                                                    }
                                                },
                                                error: function () {
                                                    alert("An error occurred during payment processing.");
                                                }
                                            });
                                        }
                                    </script>
                                    <% } %>





                                        <% if(coupon){ %>
