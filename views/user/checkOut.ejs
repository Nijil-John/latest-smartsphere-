					<!-- Order Details -->
					<div class="col-md-5 order-details">
						<div class="section-title text-center">
							<h3 class="title">Your Order</h3>
						</div>
						<div class="order-summary">
							<div class="order-col">
								<div><strong>PRODUCT</strong></div>
								<div><strong>TOTAL</strong></div>
							</div>
							<div class="order-products">
								<% products.forEach(product=> { %>
									<div class="order-col">
										<div>
											<%= product.name %>
										</div>
										<div>
											<%= product.__v %> x ₹ <%= product.price.toFixed(2) %>
										</div>
									</div>
									<% if(product.price!==product.originalPrice) {%>
										<div class="order-col">
											<div>Offer Discount</div>
											<div><strong style="color: red;">- ₹ <%=( product.originalPrice- product.price)* product.__v %></strong></div>
										</div>
										<%}%>
											<% }); %>
							</div>
							<div class="order-col">

								<% if (coupon) { %>
									<div>Coupon Discount</div>
									<div><strong style="color: red;">- ₹<%= coupon.maxDiscountAmount %></strong></div>
									<% } %>

							</div>
							<div class="order-col">
								<div>Shipping</div>
								<div><strong>+ ₹40</strong></div>
							</div>
							<div class="order-col">
								<div><strong>TOTAL</strong></div>
								<div><strong class="order-total" id="totalValue">₹<%= total + 40 %></strong></div>
							</div>
						</div>
						<% if(total > 10000) {%>
						<div class="payment-method">
							
							<div class="input-radio">
								<input type="radio" name="payment" value="ONLINE" id="payment-2" checked  />
								<label for="payment-2"><span></span> Online Payment </label>
							</div>
						</div>
						<% } else { %>
							<div class="input-radio">
								<input type="radio" name="payment" value="COD" id="payment-1" checked />
								<label for="payment-1"><span></span> Cash On Delivery </label>
							</div>
							<div class="input-radio">
								<input type="radio" name="payment" value="ONLINE" id="payment-2" />
								<label for="payment-2"><span></span> Online Payment </label>
							</div>

							<%}%>

						<input type="hidden" name="totalAmount" value="<%= total + 40 %>">
						<% if (coupon) { %>
							<input type="hidden" name="couponId" value="<%= coupon._id %>">
							<input type="hidden" name="couponDiscountAmount" value="<%= coupon.maxDiscountAmount %>">

							<% } %>

								<% let totalDiscount=0; products.forEach((product, index)=> {
									if (product.price !== product.originalPrice) {
									totalDiscount += ((product.originalPrice - product.price)*product.__v)
									}
									});
									%>
									<input type="hidden" name="totalOfferDiscount" value="<%= totalDiscount %>">
									



									<% products.forEach((product, index)=> { %>

										<input type="hidden" name="products[<%= index %>][productId]"
											value="<%= product.id %>">
										<input type="hidden" name="products[<%= index %>][productName]"
											value="<%= product.name %>">
										<input type="hidden" name="products[<%= index %>][price]"
											value="<%= product.price + 40 %>">
										<input type="hidden" name="products[<%= index %>][quantity]"
											value="<%= product.__v %>">
										<% }); %>

											<button class="primary-btn order-submit" type="submit">Place 	Order</button>

											<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
											<script>
												function handlePayment(e) {
													e.preventDefault();// Prevent default form submission initially

													const paymentMethod = document.querySelector('input[name="payment"]:checked');
													if (!paymentMethod) {
														alert("Please select a payment method.");
														return false;
													}

												
													const formData = $('.pay-form').serialize();
													if (paymentMethod.value === "ONLINE") {  // Razorpay integration
														$.ajax({
															url: "/createOrder",
															type: "POST",
															data: formData,
															success: function (res) {
																if (res.success) {
																	const options = {
																		key: res.key_id,
																		amount: res.amount,
																		currency: "INR",
																		name: res.name,
																		description: "Order Payment",
																		order_id: res.order_id,
																		prefill: {
																			name: res.name,
																			email: res.email,
																			contact: res.contact,
																		},
																		theme: { color: "#6822CC" },
																		handler: function (response) {
																			// Payment successful
																			$.ajax({
																				url: "/verifyPayment",
																				type: "POST",
																				data: {
																					payment_id: response.razorpay_payment_id,
																					order_id: response.razorpay_order_id,
																					signature: response.razorpay_signature,
																				}
																				,
																				success: function (result) {
																					if (result.success) {
																						alert("Payment Succeeded!");
																						window.location.href = "/success";
																					} else {
																						alert(result.msg || "Payment verification failed.");
																					}
																				}
																				,
																				error: function () {
																					alert("An error occurred while verifying payment.");
																					window.location.href = "/orders"
																				}
																			});
																		},
																		modal: {
																			ondismiss: function () {
																				alert("Payment was not completed. Please try again.");
																				window.location.href = "/orders"
																			}
																		},
																	};
																	const razorpayObject = new Razorpay(options);
																	razorpayObject.open();


																} else {
																	alert(res.msg || "Payment initialization failed.");
																}
															},
															error: function () {
																alert("An error occurred during payment processing.");
															}
														});
													} else if (paymentMethod.value === "COD") {
														// Allow form submission for COD
														$.ajax({
															url: "/createOrder",
															type: "POST",
															data: formData,
															success: function (res) {
																console.log(res);
																if (res || res.success) {
																	alert("Order placed successfully! Your payment method is Cash on Delivery.");
																	window.location.href = "/success";
																} else {
																	alert(res.msg || "Order placement failed.");
																}
															},
															error: function () {
																alert("An error occurred during order placement.");
															}
														});
													}
												}
											</script>
					</div>
					<!-- /Order Details -->
				</div>
			</form>
			<!-- /row -->
		</div>
		<!-- /container -->
	</div>
