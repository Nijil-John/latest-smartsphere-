												<%= address.name %>,
													<strong>Mobile:</strong>
													<%= address.mobile %>,
														<strong>Address:</strong>
														<%= address.address %>,
															<strong>Pincode:</strong>
															<%= address.pincode %>,
																<strong>State:</strong>
																<%= address.state %>,
																	<strong>City:</strong>
																	<%= address.city %>
																		<br />
																		<a style="color: red;"
																			href="/aEdit?_id=<%= address._id %>">Edit</a>
																		<br>
											</li>
											<% }); %>
