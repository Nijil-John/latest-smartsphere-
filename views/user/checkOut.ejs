														<input class="input" type="text" name="address"
															placeholder="Address" />
														<input class="input" type="text" name="city"
															placeholder="City" />
														<input class="input" type="text" name="state"
															placeholder="State" />
														<input class="input" type="text" name="pincode"
															placeholder="Pincode" />
														<input class="input" type="tel" name="mobile"
