      <div class="container-fluid">
        <!--  Row 1 -->
        <div class="row">
          <div class="col-lg-8 d-flex align-items-strech">
            <div class="card w-100">
              <div class="card-body">
                <div class="d-sm-flex d-block align-items-center justify-content-between mb-9">
                  <div class="mb-3 mb-sm-0">
                    <h5 class="card-title fw-semibold">Categories List</h5>
                  </div>
                  <div class="mb-3 mb-sm-0">
                    <button style="background-color: #5D87FF; color: white;align-content: end;"> <a style="color: white; padding: 5px;" href="/admin/addcategory">Add Category</a> </button>
                    
                  </div>
                  <div>
                   <!--  <form action="">
                      <input type="text" placeholder="search by user name,email,mobile..." name="search" />
                      <input type="submit" value="search" />
                    </form> -->
                  </div>
                </div>
                <div>

                  <table width="100%" id="adminDashboardTable">
                    <tr class="admindashboardTableRow">
                      <th>Category Id</th>
                      <th>Category Name</th>
                      <th>Number of Products</th>
                      <th>Edit</th>
                      <th>Block</th>

                    </tr>

                    <% if(category.length>0){
                      for(let i=0; i <category.length;i++){ %>
                        <tr class="admindashboardTableRow">
                          <td>
                            <%= category[i].categoryId %>
                          </td>
                          <td>
                            <%= category[i].categoryName %>
                          </td>
                          <td>
                            <%= category[i].productCount %>
                          </td>
                          <td><a href="/admin/editCategory?_id=<%= category[i]._id %>">Edit</a></td>
                          <td onclick="refreshHeader('<%= category[i]._id %>')">
                            <a href="category/<%= category[i]._id %>">
                              <i class="fa fa-user-o"></i>
                              <span id="blockedValue_<%= category[i]._id %>">
                                <%= category[i].categoryIsDeleted %>
                              </span>
                            </a>
                          </td>

                          <script>
                            function refreshHeader(id) {
                              var blockedSpan = document.getElementById("blockedValue_" + id);
                              // Assuming category[i].categoryIsDeleted contains the current value
                              var currentValue = blockedSpan.innerText;
                              // Update the span content
                              blockedSpan.innerText = currentValue === "true" ? "false" : "true";
                            }
                          </script>



                        </tr>
                        <% } }else{ %>
                          <tr class="admindashboardTableRow">
                            <td colspan="5">categorys Not found</td>
                          </tr>

                          <% } %>
                  </table>

                  <div class="pagination">
                    <% for(let i=1; i <=totalPages; i++) { %>
                      <a href="/admin/category?page=<%= i %>&limit=<%= limit %>"
                        class="<%= page === i ? 'active' : '' %>">
                        <%= i %>
                      </a>
                      <% } %>
                  </div>


                </div>
              </div>
            </div>
          </div>
