                                        <h5 class="card-title fw-semibold">Edit Offers</h5>
                                        
                                        <form id="offer-form" action="/admin/specificOffer?_id=<%= offer._id %>" method="post">
                                            <input type="hidden" name="offerId" value="<%= offer._id %>">
                                            <div>
                                                <label for="title">Offer Title:</label>
                                                <input type="text" id="title" name="title" value="<%= offer.title %>" >
                                                <span class="error-message" id="error-title"></span>
                                            </div>

                                            <!-- Radio buttons for selecting Offer Type -->

                                            <% if(offer.offerType){%>
                                                <%if(offer.offerType ==="product"){%>
                                            <div class="offerType">
                                                <input type="radio" name="offerType" id="offerType-product" value="product" checked>
                                                <label for="offerType-product">
                                                    <span></span>
                                                    Product
                                                </label>
                                                <div id="TypeId-container-product" class="TypeId-container">
                                                    <label for="TypeId">Select type:</label>
                                                    <select id="TypeId" name="TypeId">
                                                        <option value="<%= offer.typeId %>">selected product</option>
                                                        <% product.forEach(function(product) { %>
                                                            <option value="<%= product.productId %>">
                                                                <%= product.name %>
                                                            </option>
                                                            <% }); %>
                                                    </select>
                                                    <span class="error-message" id="error-TypeId-product"></span>
                                                </div>
                                            </div>
                                            <%}else if(offer.offerType ==="category"){%>
                                            <div class="offerType">
                                                <input type="radio" name="offerType" id="offerType-category" value="category" checked>
                                                <label for="offerType-category">
                                                    <span></span>
                                                    Category
                                                </label>
                                                <div id="TypeId-container-category" class="TypeId-container" >
                                                    <select id="TypeId" name="TypeId">
                                                        <option value="<%= offer.typeId %>">selected category</option>
                                                        <% category.forEach(function(category) { %>
                                                            <option value="<%= category.categoryId %>">
                                                                <%= category.categoryName %>
                                                            </option>
                                                            <% }); %>
                                                    </select>
                                                    <span class="error-message" id="error-TypeId-category"></span>
                                                </div>
                                            </div>
                                            <%}%>
                                            <%}%>
                                            <!-- Discount Percentage -->
                                            <div>
                                                <label for="discountPercentage">Discount Percentage:</label>
                                                <input type="number" id="discountPercentage" name="discountPercentage"
                                                    min="1" value="<%= offer.discountPercentage %>" max="100">
                                                <span class="error-message" id="error-discountPercentage"></span>
                                            </div>

                                            <!-- Start and End Date -->
                                            <div>
                                                <label for="startDate">Start Date:</label>
                                                <input type="date" id="startDate" name="startDate" value="<%= offer.startDate.toISOString().split('T')[0] %>">
                                                <span class="error-message" id="error-startDate"></span>
                                            </div>
                                            <div>
                                                <label for="endDate">End Date:</label>
                                                <input type="date" id="endDate" name="endDate" value="<%= offer.endDate.toISOString().split('T')[0] %>">
                                                <span class="error-message" id="error-endDate"></span>
                                            </div>

                                            <button type="submit">Update Offer</button>
                                        </form>

                                        <script>
                                            document.querySelectorAll('input[name="offerType"]').forEach(function (radioButton) {
                                                radioButton.addEventListener('change', function () {
                                                    const productContainer = document.getElementById('TypeId-container-product');
                                                    const categoryContainer = document.getElementById('TypeId-container-category');

                                                    if (document.getElementById('offerType-product').checked) {
                                                        productContainer.style.display = 'block';
                                                        categoryContainer.style.display = 'none';
                                                    } else if (document.getElementById('offerType-category').checked) {
                                                        categoryContainer.style.display = 'block';
                                                        productContainer.style.display = 'none';
                                                    }
                                                });
                                            });

                                            document.getElementById('offer-form').addEventListener('submit', function (event) {
                                                event.preventDefault(); // Prevent form submission for validation

                                                // Clear previous error messages
                                                document.querySelectorAll('.error-message').forEach(function (el) {
                                                    el.textContent = '';
                                                });

                                                let isValid = true;

                                                // Validate fields
                                                const title = document.getElementById('title').value;
                                                if (!title) {
                                                    document.getElementById('error-title').textContent = 'Offer title is required.';
                                                    isValid = false;
                                                }

                                                const offerType = document.querySelector('input[name="offerType"]:checked');
                                                if (!offerType) {
                                                    document.querySelector('input[name="offerType"]').parentElement
                                                        .querySelector('.error-message').textContent = 'Please select an offer type.';
                                                    isValid = false;
                                                }

                                                if (offerType && offerType.value === 'product') {
                                                    const typeIdProduct = document.getElementById('TypeId').value;
                                                    if (!typeIdProduct) {
                                                        document.getElementById('error-TypeId-product').textContent = 'Please select a product.';
                                                        isValid = false;
                                                    }
                                                }

                                                const discountPercentage = document.getElementById('discountPercentage').value;
                                                if (!discountPercentage) {
                                                    document.getElementById('error-discountPercentage').textContent = 'Discount percentage is required.';
                                                    isValid = false;
                                                }

                                                const startDate = document.getElementById('startDate').value;
                                                const endDate = document.getElementById('endDate').value;

                                                const today = new Date().toISOString().split('T')[0]; // Get today's date in yyyy-mm-dd format

                                                // Validate Start Date
                                                if (!startDate) {
                                                    document.getElementById('error-startDate').textContent = 'Start date is required.';
                                                    isValid = false;
                                                } else if (startDate > endDate && endDate) {
                                                    document.getElementById('error-startDate').textContent = 'Start date must be before or on the same day as the end date.';
                                                    isValid = false;
                                                }

                                                // Validate End Date
                                                if (!endDate) {
                                                    document.getElementById('error-endDate').textContent = 'End date is required.';
                                                    isValid = false;
                                                } else if (endDate <= today) {
                                                    document.getElementById('error-endDate').textContent = 'End date must be in the future.';
                                                    isValid = false;
                                                }

                                                // If all validations pass, submit the form
                                                if (isValid) {
                                                   // alert('Form submitted successfully!');
                                                    // Uncomment the line below to actually submit the form
                                                    event.target.submit();
                                                }
                                            });
                                        </script>


