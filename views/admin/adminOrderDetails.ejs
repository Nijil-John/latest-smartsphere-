</head>

<body>
    <!--  Body Wrapper -->
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
        data-sidebar-position="fixed" data-header-position="fixed">
        <!-- Sidebar Start -->
        <aside class="left-sidebar">
            <!-- Sidebar scroll-->
            <div>
                <div class="brand-logo d-flex align-items-center justify-content-between">
                    <a href="./index.html" class="text-nowrap logo-img">
                        <img src="images/logos/dark-logo.png" width="180" alt="" />
                    </a>
                    <div class="close-btn d-xl-none d-block sidebartoggler cursor-pointer" id="sidebarCollapse">
                        <i class="ti ti-x fs-8"></i>
                    </div>
                </div>
                <!-- Sidebar navigation-->
                <nav class="sidebar-nav scroll-sidebar" data-simplebar="">
                    <ul id="sidebarnav">
                        <li class="nav-small-cap">
                            <i class="ti ti-dots nav-small-cap-icon fs-4"></i>
                            <span class="hide-menu">Home</span>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" href="/admin/adminDashboard" aria-expanded="false">
                                <span>
                                    <i class="ti ti-layout-dashboard"></i>
                                </span>
                                <span class="hide-menu">Dashboard</span>
                            </a>
                        </li>
                        <li class="nav-small-cap">
                            <i class="ti ti-dots nav-small-cap-icon fs-4"></i>
                            <span class="hide-menu">Admin Tools</span>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" href="/admin/products" aria-expanded="false">
                                <span>
                                    <i class="ti ti-alert-circle"></i>
                                </span>
                                <span class="hide-menu">Products</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" href="/admin/customer" aria-expanded="false">
                                <span>
                                    <i class="ti ti-user"></i>
                                </span>
                                <span class="hide-menu">Customer</span>
                            </a>
                        </li>

                        <li class="sidebar-item">
                            <a class="sidebar-link" href="/admin/order" aria-expanded="false">
                                <span>
                                    <i class="ti ti-cards"></i>
                                </span>
                                <span class="hide-menu">Order</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" href="/admin/category" aria-expanded="false">
                                <span>
                                    <i class="ti ti-file-description"></i>
                                </span>
                                <span class="hide-menu">Catogeries</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" href="/admin/coupon" aria-expanded="false">
                                <span>
                                    <i class="ti ti-article"></i>
                                </span>
                                <span class="hide-menu">Coupon Management</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" href="/admin/salesreport" aria-expanded="false">
                                <span>
                                    <i class="ti ti-typography"></i>
                                </span>
                                <span class="hide-menu">Sales Report</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" href="/admin/offer" aria-expanded="false">
                                <span>
                                    <i class="ti ti-login"></i>
                                </span>
                                <span class="hide-menu">Offer Module</span>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- End Sidebar navigation -->
            </div>
            <!-- End Sidebar scroll-->
        </aside>
        <!--  Sidebar End -->
        <!--  Main wrapper -->
        <div class="body-wrapper">
            <!--  Header Start -->
            <header class="app-header">
                <nav class="navbar navbar-expand-lg navbar-light">
                    <ul class="navbar-nav">
                        <li class="nav-item d-block d-xl-none">
                            <a class="nav-link sidebartoggler nav-icon-hover" id="headerCollapse"
                                href="javascript:void(0)">
                                <i class="ti ti-menu-2"></i>
                            </a>
                        </li>
                    </ul>
                    <div class="navbar-collapse justify-content-end px-0" id="navbarNav">
                        <ul class="navbar-nav flex-row ms-auto align-items-center justify-content-end">
                            <li class="nav-item dropdown">
                                <a class="nav-link nav-icon-hover" href="javascript:void(0)" id="drop2"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                    <img src="images/profile/user-1.jpg" alt="" width="35" height="35"
                                        class="rounded-circle" />
                                </a>
                                <div class="dropdown-menu dropdown-menu-end dropdown-menu-animate-up"
                                    aria-labelledby="drop2">
                                    <div class="message-body">
                                        <a href="javascript:void(0)"
                                            class="d-flex align-items-center gap-2 dropdown-item">
                                            <i class="ti ti-user fs-6"></i>
                                            <p class="mb-0 fs-3">
                                                <%= admin.name %>
                                            </p>
                                        </a>
                                        <a href="javascript:void(0)"
                                            class="d-flex align-items-center gap-2 dropdown-item">
                                            <i class="ti ti-mail fs-6"></i>
                                            <p class="mb-0 fs-3">My Account</p>
                                        </a>
                                        <!-- <a href="javascript:void(0)" class="d-flex align-items-center gap-2 dropdown-item">
                      <i class="ti ti-list-check fs-6"></i>
                      <p class="mb-0 fs-3">My Task</p>
                    </a> -->
                                        <a href="admin/logout"
                                            class="btn btn-outline-primary mx-3 mt-2 d-block">Logout</a>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </nav>
            </header>
            <!--  Header End -->
            <div class="container-fluid">
                <!--  Row 1 -->
                <div class="row">
                    <div class="col-lg-8 d-flex align-items-strech">
                        <div class="card w-100">
                            <div class="card-body">
                                <div class="d-sm-flex d-block align-items-center justify-content-between mb-9">
                                    <div class="mb-3 mb-sm-0"></div>
                                    <div></div>
                                    <div></div>
                                </div>
                                <div>
                                    <div class="order-list" style="
                        display: flex;
                        flex-direction: column;
                        align-items: center;
                        margin: 20px;
                      ">
                                        <div class="order-card" style="
                          background-color: #fff;
                          border-radius: 8px;
                          box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                          width: 90%;
                          max-width: 800px;
                          padding: 20px;
                        ">
                                            <!-- Products Section -->
                                            <div class="product-section"
                                                style="display: flex; flex-wrap: wrap; gap: 20px">
                                                <% products.forEach(product=> { %>
                                                    <div class="product-card" style="
                              display: flex;
                              background-color: #f8f8f8;
                              padding: 20px;
                              border-radius: 8px;
                              width: 100%;
                              max-width: 100%;
                              box-sizing: border-box;
                            ">
                                                        <img src="/<%= product.productImage[0].path %>"
                                                            alt="<%= product.name %> Image" width="100" height="140"
                                                            style="border-radius: 5px; margin-right: 20px" />
                                                        <div class="product-details" style="flex: 1">
                                                            <h3 style="margin: 0;font-size: 1.3em;color: #1c1c1c;">
                                                                <%= product.name %>
                                                            </h3>
                                                            <p
                                                                style="color: #777;margin: 8px 0 12px;font-size: 1.1em;         ">
                                                                <%= product.description %>
                                                            </p>
                                                            <p style="color:#333;font-weight: bold; font-size: 1.2em; ">
                                                                Price: ₹<%= product.price %>
                                                            </p>
                                                            <p style="color: #555; font-size: 1.1em">
                                                                Quantity: <%= product.quantity %>
                                                            </p>
                                                            <%if(product.brand !== 'not-requested'){%>
                                                                <p style="color: #c70000; font-size: 1em;">RETURN : <%= product.brand %>  </p>
                                                                <%}%>
                                                        </div>
                                                    </div>
                                                    <% }) %>
                                            </div>

                                            <!-- Order Summary and Status -->
                                            <div class="order-info"
                                                style="margin-top: 20px;border-top: 1px solid #ddd;padding-top: 15px;">
                                                <h3 style="color: #444; margin-bottom: 10px"> Order Summary </h3>
                                                <p style="font-size: 1.em; color: #f00000"> <strong>Order by : </strong>
                                                    <%= user[0].name %>
                                                </p>
                                                <p style="font-size: 1.2em; color: #4d9f4d"> <strong>Status :</strong>
                                                    <%= order.status %>
                                                </p>
                                                <%if(order.status==="Return"){%>
                                                    <p style="font-size: 1.em; color: #4d9f4d"> <strong>Return payment
                                                            status:</strong>
                                                        <%= returnData[0].paymentStatus %>
                                                    </p>
                                                    <%}%>
                                                        <div>
                                                            <%if(coupon){%>
                                                                <p style="font-size: 1em; color: #ff0000"><strong>Coupon
                                                                        Code applied :</strong>
                                                                    <%= coupon.code %>
                                                                </p>
                                                                <p style="font-size: 1em; color: #ff0000"><strong>Coupon
                                                                        discount applied :</strong>
                                                                    ₹ <%= coupon.maxDiscountAmount %>
                                                                </p>
                                                                <%}%>
                                                                    <%if(order.offerDiscount>0){%>
                                                                        <p style="font-size: 1em; color: #ff0000">
                                                                            <strong>Offer Amount applied :</strong>
                                                                            <%= order.offerDiscount %>
                                                                        </p>
                                                                        <%}%>
                                                        </div>
                                                        <p style="font-size: 1em; color: #4d9f4d"><strong>payment Method
                                                                :</strong>
                                                            <%= order.paymentMethod %>
                                                        </p>
                                                        <p style="font-size: 1em; color: #4d9f4d"><strong>payment Status
                                                                :</strong>
                                                            <%= order.paymentStatus %>
                                                        </p>
                                                        <p style="font-size: 1em; color: #4d9f4d"><strong>Total price
                                                                :</strong> ₹ <%= order.totalAmount %>
                                                        </p>
                                                        <%if(order.status==='pending'||order.status==="confirmed"||order.status=== "shipped"
                                                            ){%>
                                                            <form action="/admin/orderValues" method="POST">
                                                                <!-- "Pending", "Confirmed", "Shipped", "Delivered", "Cancelled","Return" -->
                                                                <input type="hidden" name="returns" value="false">
                                                                <input type="hidden" name="orderId"
                                                                    value="<%= order._id %>" />
                                                                <input type="hidden" name="orderStatus"
                                                                    value="<%= order.status %>" />
                                                                <label for="deliveryStatus">Delivery Status:</label>
                                                                <select id="deliveryStatus" name="deliveryStatus"
                                                                    required>
                                                                    <option value="">Please select</option>
                                                                    <option value="pending" <%=order.status !=='pending'
                                                                        ? 'disabled' : '' %>>Pending</option>
                                                                    <option value="confirmed" <%=['pending', 'confirmed'
                                                                        ].includes(order.status) ? '' : 'disabled' %>
                                                                        >Confirmed</option>
                                                                    <option value="shipped" <%=['confirmed', 'shipped'
                                                                        ].includes(order.status) ? '' : 'disabled' %>
                                                                        >Shipped</option>
                                                                    <option value="delivered" <%=['shipped', 'delivered'
                                                                        ].includes(order.status) ? '' : 'disabled' %>
                                                                        >Delivered</option>
                                                                    <option value="cancelled"
                                                                        <%=order.status==='pending' ? '' : 'disabled' %>
                                                                        >Cancelled</option>
                                                                </select>
                                                                <% if(order.paymentMethod=='COD' ){ %>
                                                                    <label for="paymentStatus">Payment Status:</label>
                                                                    <select id="paymentStatus" name="paymentStatus"
                                                                        required>
                                                                        <option value="">Please select</option>
                                                                        <option value="pending" <%=order.paymentStatus
                                                                            !=='pending' ? 'disabled' : '' %>>Pending
                                                                        </option>
                                                                        <option value="paid" <%=['pending', 'paid'
                                                                            ].includes(order.paymentStatus) ? ''
                                                                            : 'disabled' %>>Paid</option>
                                                                        <option value="failed"
                                                                            <%=order.paymentStatus==='failed' ? ''
                                                                            : 'disabled' %>>Failed</option>
                                                                    </select>
                                                                    <br><br>
                                                                    <%}%>
                                                                        <button class="submit-button"
                                                                            style="background-color: #ed0707;border: none; color: white;padding: 5px;"
                                                                            type="submit">Update Order</button>
                                                            </form>
                                                            <%} else if(order.status==="Return-Requested" ){%>
                                                                <form action="/admin/orderValues" method="POST">
                                                                    <input type="hidden" name="orderId"
                                                                        value="<%= order._id %>" />
                                                                    <input type="hidden" name="returns" value="true">
                                                                    <label for="deliveryStatus">Return Status:</label>
                                                                    <select id="deliveryStatus" name="returnStatus"
                                                                        required>
                                                                        <option value="">Please select</option>
                                                                        <option value="approved">Approved</option>
                                                                        <option value="rejected">Rejected</option>
                                                                    </select>
                                                                    <label for="paymentStatus1"> Payment Status
                                                                        :</label>
                                                                    <select id="paymentStatus2"
                                                                        name="returnPaymentStatus" required>
                                                                        <option value="">Please select</option>
                                                                        <option value="pending">Pending</option>
                                                                        <option value="refunded">Refunded</option>
                                                                        <option value="rejected">Rejected</option>
                                                                    </select>
                                                                    <br><br>
                                                                    <button
                                                                        style="background-color: #eeff01;border: none; color: rgb(0, 0, 0);padding: 5px;"
                                                                        class="submit-button" type="submit">Update
                                                                        Order</button>
                                                                </form>
                                                                <%}%>




                                            </div>


                                            <!-- Delivery Address Section -->
                                            <div class="address-section"
                                                style="margin-top: 20px;padding-top: 15px;border-top: 1px solid #ddd;">
                                                <h4 style="color: #444; margin-bottom: 10px">
                                                    Delivery Address
                                                </h4>
                                                <address
                                                    style="font-style: normal;line-height: 1.6;color: #555;font-size: 1.1em;">
                                                    <strong>Name:</strong>
                                                    <%= address.name %><br />
                                                        <strong>Mobile:</strong>
                                                        <%= address.mobile %><br />
                                                            <strong>Address:</strong>
                                                            <%= address.address %>,
                                                                <%= address.city %>, <%= address.state %><br />
                                                                        <strong>Pincode:</strong>
                                                                        <%= address.pincode %>
                                                </address>
                                            </div>

                                            <!-- Cancel Order Button -->
                                            <div class="action-button" style="text-align: right; margin-top: 20px">
                                                <button
                                                    style="background-color: #606060;color: white;padding: 12px 24px;border: none;border-radius: 5px;cursor: pointer;font-size: 1em;">
                                                    <a href="/admin/order"
                                                        style="color: white; text-decoration: none">back
                                                        to Order</a>
                                                </button>

                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="py-6 px-6 text-center">
                    <p class="mb-0 fs-4">
                        @ll copyright reserveved<a href="/" target="_blank"
                            class="pe-1 text-primary text-decoration-underline">Smartsphere</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
    <script src="libs/jquery/dist/jquery.min.js"></script>
    <script src="libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="js/sidebarmenu.js"></script>
    <script src="js/app.min.js"></script>
    <script src="libs/apexcharts/dist/apexcharts.min.js"></script>
    <script src="libs/simplebar/dist/simplebar.js"></script>
    <script src="js/dashboard.js"></script>
</body>

</html>