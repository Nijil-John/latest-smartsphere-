            <div class="card w-100">
              <div class="card-body">
                <div class="d-sm-flex d-block align-items-center justify-content-between mb-9">
                  <div class="mb-3 mb-sm-0">
                    <h5 style="font-size: 25px;text-align: center;" class="card-title fw-semibold">Orders List</h5>
                    <div>
                      <style>
                        /* Table styling */
                        #adminDashboardTable {
                          width: 110%;
                          /* Set width to 100% */
                          border-collapse: collapse;
                          margin: 20px 0;
                          /* Adjusted margin for better spacing */
                          font-family: Arial, sans-serif;
                        }

                        /* Table header */
                        #adminDashboardTable th {
                          border: 2px solid #000000;

                          background-color: #5D87FF;
                          color: #ffffff;
                          padding: 10px;
                          text-align: left;
                          font-size: 16px;
                        }

                        /* Table rows */
                        #adminDashboardTable td {
                          padding: 10px;
                          border: 2px solid #000000;
                          font-size: 14px;
                        }

                        /* Alternating row colors */
                        #adminDashboardTable tr:nth-child(even) {
                          background-color: #ffffff;
                        }

                        #adminDashboardTable tr:hover {
                          font-size: 110%;
                          color: rgb(0, 0, 0);
                          background-color: #ffffff;
                        }

                        /* Center alignment for specific columns */
                        #adminDashboardTable td.center {
                          text-align: center;
                        }

                        /* Styling the 'Created At' column */
                        #adminDashboardTable td.createdAt {
                          color: #c4c4c4;
                          font-style: italic;
                        }

                        /* Column with multiple items (Items column) */
                        #adminDashboardTable td.items div {
                          margin-bottom: 5px;
                          font-size: 13px;
                        }
                      </style>
                       <% if (orders.length> 0) { %>
                      <table id="adminDashboardTable">
                        <tr>
                          <th>Order ID</th>
                          <th>User Id</th>

                          <th>Total Amount</th>
                          <th>Status</th>
                          <th>Created At</th>
                          <th>Items</th>
                        </tr>

                       
                          <% for (let i = 0; i < orders.length; i++) { %>
                            <tr>
                              <td>
                                <%= orders[i].orderId %>
                              </td>
                              <td>
                                <%= orders[i].userId %>
                              </td>
                              <td class="center">
                                <%= orders[i].totalAmount %>
                              </td>
                              <%if( orders[i].status==='Return-Requested' ){%>
                                <td style="color: #ffffff;background-color: #37817e;" class="center">
                                  <%= orders[i].status.toUpperCase() %>
                                </td>
                                <%} else {%>
                                  <td style="color: red;font-size: 15px;" class="center">
                                    <%= orders[i].status.toUpperCase() %>
                                  </td>
                                  <%}%>
                                    <td class="createdAt">
                                      <%= orders[i].createdAt.toISOString().slice(0, 10) %>
                                    </td><!-- .toISOString().slice(0, 10) -->
                                    <td class="items">
                                      <a href="/admin/orderValues?orderId=<%= orders[i]._id %>">View Details</a>
                                      <!-- <% orders[i].items.forEach(item => { %>
                                 
                                  <div><strong>Product:</strong> <%= item.productName %>, <strong>Quantity:</strong> <%= item.quantity %>, <strong>Amount:</strong> <%= item.price %></div>
                                <% }); %> -->
                                    </td>
                            </tr>
                            <% } %>
                      </table>
                    <% }else { %>
                     <p>Order Not Found</p>
                        
                      <% } %>


                      <div class="pagination">
                        <% for (let i=1; i < totalPages; i++) { %>
                          <a href="/admin/order?page=<%= i %>&limit=<%= limit %>" class="<%= page === i ? 'active' : '' %>"><button style="padding: 5px;margin-right: 5px;" ><%= i %></button>
                          </a>
                          <% } %>
                      </div>
                    </div>







                  </div>
                  <div>

                  </div>
