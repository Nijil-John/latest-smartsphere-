      <!--  Header End -->
      <div class="container-fluid">
        <!--  Row 1 -->
        <div class="row">
          <div class="col-lg-8 d-flex align-items-strech">
            <div class="card w-100">
              <h5 class="card-title fw-semibold">Sales Overview</h5>
              <div class="card-body">
                <div class="d-sm-flex d-block align-items-center justify-content-between mb-9">
                  <div class="mb-3 mb-sm-0">
                  </div>
                  <h5>Total Revenue Genarated: <%= totalAmount %>
                  </h5>
                  <h5>Total Order Count: <%= totalOrderCount %>
                  </h5>
                  <h5>Total discount Amount: <%= totaldiscount %>
                  </h5>
                </div>


                <form method="GET" action="/admin/salesreport">
                  <div class="row align-items-center justify-content-between d-flex">
                    <!-- Start Date Field -->
                    <div class="col-md-auto mb-3">
                      <label for="startDate">Start Date:</label>
                      <input type="date" id="startDate" name="startDate" class="form-control form-control-sm" />
                    </div>

                    <div class="col-md-auto mb-3">
                      <label for="endDate">End Date:</label>
                      <input type="date" id="endDate" name="endDate" class="form-control form-control-sm" />
                    </div>
                    <!-- Submit Button -->
                    <div class="col-md-auto mb-3">
                      <button type="submit" class="btn btn-sm btn-primary">Apply Filters</button>
                    </div>
                  </div>
                </form>




                <div class="card w-100">
                  <div class="table-responsive">
                    <table class="table text-nowrap mb-0 align-middle">
                      <thead class="text-dark fs-4">
                        <tr style="background-color: #5D87FF;">
                          <th class="border-bottom-0">
                            <h6  class="fw-semibold mb-0">User Name</h6>
                          </th>
                          <th class="border-bottom-0">
                            <h6 class="fw-semibold mb-0">Purchase Details</h6>
                          </th>
                          <th class="border-bottom-0">
                            <h6 class="fw-semibold mb-0">Coupon Code</h6>
                          </th>
                          <th class="border-bottom-0">
                            <h6 class="fw-semibold mb-0">Coupon Discount</h6>
                          </th>
                          <th class="border-bottom-0">
                            <h6>Total Price</h6>
                          </th>
                        </tr>
                      </thead>
                      <tbody>
                        <% order.forEach((order)=> { %>
                          <tr>
                            <td class="border-bottom-0">
                              <h6 class="fw-semibold mb-0">
                                <%= order.userData.name %>
                              </h6>
                            </td>
                            <td>
                              <table style="border-color: #dedede;">
                                <thead>
                                  <tr>
                                    <th>Product Name</th>
                                    <th>Quantity</th>
                                    <th>Price</th>
                                  </tr>
                                </thead>
                                <tbody>
                                  <% order.items.forEach((product)=> { %>
                                    <tr>
                                      <td>
                                        <h6 class="fw-semibold mb-1">
                                          <%= product.productName %>
                                        </h6>
                                      </td>
                                      <td>
                                        <p class="mb-0 fw-normal">
                                          <%= product.quantity %>
                                        </p>
                                      </td>
                                      <td>
                                        <div class="d-flex align-items-center gap-2"><span>
                                            <%= product.price %>
                                          </span></div>
                                      </td>
                                    </tr>
                                    <% }) %>
                                </tbody>
                              </table>
                            </td>
                            <% if(order.couponData) { %>
                              <td class="border-bottom-0">
                                <h6 class="fw-semibold mb-0 fs-4">
                                  <%= order.couponData.code %>
                                </h6>
                              </td>
                              <td class="border-bottom-0">
                                <h6 class="fw-semibold mb-0 fs-4">
                                  <%= order.couponData.maxDiscountAmount %>
                                </h6>
                              </td>
                              <% } else { %>
                                <td class="border-bottom-0">
                                  <h6 class="fw-semibold mb-0 fs-4">null</h6>
                                </td>
                                <td class="border-bottom-0">
                                  <h6 class="fw-semibold mb-0 fs-4">null</h6>
                                </td>
                                <% } %>
                                  <td class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0 fs-4">
                                      <%= order.totalAmount %>
                                    </h6>
                                  </td>
                          </tr>
                          <% }) %>
                      </tbody>
                    </table>
                  </div>
                </div>



              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-4 d-flex align-items-stretch">
